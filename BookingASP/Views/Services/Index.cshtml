@model IEnumerable<BookingASP.Models.Service>

@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}

@if (Model.Count() > 0) { 
@Html.Hidden("ServiceID", Model.FirstOrDefault().ID)
}

<h2>Services</h2>

<p>
    @Html.ActionLink("Add service", "Create", null, new { @class = "addService" })
</p>

@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="container servicesContainer">
            <div class="row row-sevice-name">
                <div class="col-sm-8">
                    @Html.DisplayFor(modelItem => item.Title)

                </div>
                <div class="col-sm-4">
                  
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.ID }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })



                </div>

            </div>
            <div class="row row-description">
                <div class="col-sm-12">
                    @Html.DisplayFor(modelItem => item.Description)
                </div>

            </div>

            <div class="row row-info">
                <div class="col-sm-4">
                    @Html.DisplayFor(modelItem => item.Availability)
                    <span>Availibility</span>
                </div>
                <div class="col-sm-2">
                    @Html.DisplayFor(modelItem => item.Spaces)
                    <span>Spaces</span>
                </div>
                <div class="col-sm-2">
                    @Html.DisplayFor(modelItem => item.Duration)
                    <span>Duration</span>
                </div>
                <div class="col-sm-3">
                    @Html.DisplayFor(modelItem => item.Price)
                    <span>Price</span>
                </div>
            </div>

            
        </div>
    }
}






